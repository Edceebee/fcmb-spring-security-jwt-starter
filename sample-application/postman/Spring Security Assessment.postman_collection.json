{
  "info": {
    "name": "Spring Security Assessment",
    "description": "Login (get token) and test public, user, and admin endpoints. Base URL uses port 8069.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8069" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (get token)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const json = pm.response.json();",
                  "  if (json.token) pm.collectionVariables.set('token', json.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": "{{baseUrl}}/api/public/auth/login"
          }
        },
        {
          "name": "Login as user",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const json = pm.response.json();",
                  "  if (json.token) pm.collectionVariables.set('token', json.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user\",\n  \"password\": \"user123\"\n}"
            },
            "url": "{{baseUrl}}/api/public/auth/login"
          }
        }
      ]
    },
    {
      "name": "Public (no auth)",
      "item": [
        {
          "name": "Health",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/public/health"
          }
        }
      ]
    },
    {
      "name": "User (JWT required)",
      "item": [
        {
          "name": "Get current user (me)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/api/user/me"
          }
        }
      ]
    },
    {
      "name": "Admin (JWT + ADMIN role)",
      "item": [
        {
          "name": "Get all users",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/api/admin/users"
          }
        }
      ]
    }
  ]
}
